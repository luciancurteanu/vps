---
# Ansible-lint configuration for VPS project
# Focus on critical errors first, gradually address the rest

# Exclude patterns
exclude_paths:
  - .cache/
  - .git/
  - molecule/
  - temp/

# Use basic profile as baseline
profile: basic

# Skip specific rules temporarily (to be addressed incrementally)
skip_list:
  - var-naming[no-role-prefix]      # Variable naming - requires major refactoring
  - risky-file-permissions          # Requires security review for each file
  - ignore-errors                   # Most are intentional with comments explaining why
  - yaml[line-length]               # Some lines logically need to be longer
  - name[template]                  # Jinja2 in task names is intentional for dynamic naming

# Enable offline mode if needed
# offline: true

# Warning only rules (don't fail build)
warn_list:
  - experimental
  - no-relative-paths
  - schema
  - command-instead-of-shell

# Set maximum line length
max_line_length: 160

# Enable progressive mode (stricter over time)
# progressive: false
