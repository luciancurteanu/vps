---
# Ansible-lint configuration for VPS project
# Focus on critical errors first, gradually address the rest

# Exclude patterns
exclude_paths:
  - .cache/
  - .git/
  - molecule/
  - temp/

# Use basic profile as baseline
profile: basic

# Skip specific rules (only truly unavoidable violations)
skip_list:
  - var-naming[no-role-prefix]      # Variable naming - would break existing playbooks
  - name[template]                  # Jinja2 in task names is intentional for dynamic naming

# Enable offline mode if needed
# offline: true

# Warning only rules (don't fail build)
warn_list:
  - experimental
  - no-relative-paths
  - schema
  - command-instead-of-shell

# Set maximum line length
max_line_length: 160

# Enable progressive mode (stricter over time)
# progressive: false
