---
# Ansible Vault Secrets File for vps
# This file stores all sensitive data. Encrypt it using 'ansible-vault encrypt secrets.yml'.
# Variables are organized by the role or setup phase they primarily relate to.
# ALL VALUES HERE ARE EXAMPLES - REPLACE THEM WITH YOUR ACTUAL SECRETS.

################################################################################
# SECTION 1: CORE SYSTEM & CONNECTIVITY SECRETS
# Essential for Ansible connection and base system user setup.
################################################################################

# (Password for the default admin user if created by playbooks, e.g., 'admin' or 'ansible')
vault_admin_password: "CHANGEME"             # REQUIRED: Set a strong password for the admin user

# (Public SSH key for the admin_user (e.g., 'lucas') to enable passwordless SSH login)
# Replace with the actual public key string, e.g., "ssh-rsa AAAA... user@host"
vault_admin_ssh_public_key: "ssh-ed25519 AAAA... your-key-here" # REQUIRED: Public SSH key for admin_user

################################################################################
# SECTION 2: MASTER DOMAIN USER SECRET
# Password for the primary domain user (e.g., user 'goapi' for domain 'goapi.cloud')
# Used when master_domain is true and the playbook creates this user.
################################################################################

vault_domain_user_password: "CHANGEME"       # REQUIRED if master_domain is true: Password for the user '{{ domain_user }}'

################################################################################
# SECTION 3: MARIADB ROLE SECRETS (roles/mariadb)
# Passwords for MariaDB root and standard users.
# - root: Full admin access, creates databases (localhost only)
# - {{ db_remote_user }}: Full privileges, remote access from any host (%)
# - webclient: Full privileges, local access only (localhost)
################################################################################

vault_db_root_password: "CHANGEME"           # REQUIRED: MariaDB root user password
vault_db_webclient_password: "CHANGEME"      # REQUIRED: Password for webclient user (local access only)
vault_db_remote_password: "CHANGEME"         # REQUIRED: Password for remote user (configured in all.yml as db_remote_user)

################################################################################
# SECTION 4: MAIL ROLE SECRETS (roles/mail)
# Passwords for mail-related databases and external SMTP (if used).
################################################################################

vault_mail_db_password: "CHANGEME"           # REQUIRED if mail role is used: Password for mail database user
vault_roundcube_db_password: "CHANGEME"      # REQUIRED if mail role is used: Password for Roundcube database user
vault_mail_default_password: "CHANGEME"      # REQUIRED when creating virtual hosts: Default password for mailboxes (contact@, support@, etc.)

################################################################################
# SECTION 5: COCKPIT ROLE (roles/cockpit)
# Cockpit uses system user authentication (PAM) - no separate password needed.
# Login with your default_user (admin) and system password.
################################################################################
