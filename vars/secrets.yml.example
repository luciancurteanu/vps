---
# Example secrets file for vps
# IMPORTANT: This is just an example - copy and customize it with:
#   cp vars/secrets.yml.example vars/secrets.yml
#   nano vars/secrets.yml
#   ansible-vault encrypt vars/secrets.yml

################################################################################
# SECTION 1: CORE SYSTEM & CONNECTIVITY SECRETS
# Essential for Ansible connection and base system user setup.
################################################################################

# Password for the default admin user created by playbooks (e.g., 'admin')
vault_admin_password: "ChangeMe123!"             # REQUIRED: Set a strong password for the admin user

# Public SSH key for the admin user to enable passwordless SSH login
# Replace with your actual public key string, e.g., "ssh-rsa AAAA... user@host"
vault_admin_ssh_public_key: "ssh-ed25519 AAAAC... your-key-here" # REQUIRED: Your public SSH key for admin_user

################################################################################
# SECTION 2: MASTER DOMAIN USER SECRET
# Password for the primary domain user (e.g., user 'vps' for domain 'vps.test')
# Used when master_domain is true and the playbook creates this user.
################################################################################

vault_domain_user_password: "ChangeMe123!"       # REQUIRED if master_domain is true: Password for the domain user

################################################################################
# SECTION 3: MARIADB ROLE SECRETS (roles/mariadb)
# Passwords for MariaDB root and standard users.
################################################################################

vault_db_root_password: "ChangeMe123!"           # REQUIRED: MariaDB root user password
# Passwords for MariaDB users used by roles/playbooks. Adjust names to match your configuration in group_vars/all.yml
vault_db_webclient_password: "ChangeMe123!"      # REQUIRED: Password for webclient user (local access only)
vault_db_remote_password: "ChangeMe123!"         # REQUIRED: Password for remote DB user (if used)

################################################################################
# SECTION 4: MAIL ROLE SECRETS (roles/mail)
# Passwords for mail-related databases and external SMTP (if used).
################################################################################

vault_mail_db_password: "ChangeMe123!"           # REQUIRED if mail role is used: Password for mail database user
vault_roundcube_db_password: "ChangeMe123!"      # REQUIRED if mail role is used: Password for Roundcube database user
vault_mail_default_password: "ChangeMe123!"      # REQUIRED when creating virtual hosts: Default password for mailboxes (contact@, support@, etc.)

################################################################################
# SECTION 5: COCKPIT ROLE (roles/cockpit)
# Cockpit uses system user authentication (PAM) - no separate password needed.
# Login with your default_user (admin) and system password.
################################################################################