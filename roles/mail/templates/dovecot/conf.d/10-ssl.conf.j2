# {{ ansible_managed }}
# Dovecot SSL configuration

# SSL certificates
ssl = {{ mail_ssl_enabled | ternary('required', 'no') }}
{% if mail_ssl_enabled %}
ssl_cert = <{{ mail_ssl_cert }}
ssl_key = <{{ mail_ssl_key }}
{% if mail_ssl_ca | default('') %}ssl_ca = <{{ mail_ssl_ca }}{% endif %}
{% endif %}

# SSL protocols and ciphers
ssl_min_protocol = TLSv1.2
ssl_prefer_server_ciphers = yes
ssl_cipher_list = ALL:!ADH:!LOW:!SSLv2:!SSLv3:!EXP:!aNULL:+HIGH:+MEDIUM