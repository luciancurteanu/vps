upstream cockpit {
    server 127.0.0.1:{{ cockpit_port }};
}

map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

server {
    listen 80;
    server_name {{ cockpit_subdomain }};

    access_log /var/log/nginx/{{ cockpit_subdomain }}.access.log;
    error_log /var/log/nginx/{{ cockpit_subdomain }}.error.log;

    # Cockpit WebSocket and HTTP proxy
    location / {
        # Proxy to HTTP backend to avoid TLS handshake issues
        proxy_pass http://cockpit;
        proxy_http_version 1.1;

        # WebSocket support - critical for Cockpit dashboard
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;

        # Headers for Cockpit to recognize the original request
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;

        # Longer timeouts for WebSocket connections
        proxy_connect_timeout 60s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;

        # Disable buffering for real-time updates
        proxy_buffering off;
        proxy_request_buffering off;
    }
}
