# {{ ansible_managed }}
# Nginx reverse proxy configuration for Webmin

upstream webmin-upstream {
    server localhost:{{ webmin_port }};
}

server {
    listen 80;
    listen [::]:80;
    server_name {{ webmin_subdomain }};

{% if webmin_ssl_enabled | default(false) %}
    # Redirect to HTTPS
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ webmin_subdomain }};

    # SSL configuration (using existing domain certs)
    ssl_certificate /etc/letsencrypt/live/{{ domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ domain }}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
{% else %}
    # HTTP only (SSL not enabled)
{% endif %}

    # Security headers
    add_header Content-Security-Policy "upgrade-insecure-requests;";

    # Logging
    access_log /home/{{ domain }}/logs/{{ webmin_subdomain }}-access.log;
    error_log /home/{{ domain }}/logs/{{ webmin_subdomain }}-error.log;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied expired no-cache no-store private auth;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml;
    gzip_disable "MSIE [1-6]\.";

    # Proxy settings
    location / {
        # Set headers and proxy
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $http_host;
        
        # Proxy request to webmin server (HTTP when SSL disabled, HTTPS when enabled)
        {% if webmin_ssl_enabled | default(false) %}
        proxy_pass https://webmin-upstream/;
        proxy_ssl_verify off;
        proxy_redirect https://localhost:{{ webmin_port }}/ $scheme://$http_host/;
        proxy_redirect https://$host:{{ webmin_port }}/ $scheme://$http_host/;
        {% else %}
        proxy_pass http://webmin-upstream/;
        # Rewrite all redirects from localhost to external URL
        proxy_redirect http://localhost:{{ webmin_port }}/ $scheme://$http_host/;
        proxy_redirect http://127.0.0.1:{{ webmin_port }}/ $scheme://$http_host/;
        proxy_redirect http://$host:{{ webmin_port }}/ $scheme://$http_host/;
        proxy_redirect http://{{ webmin_subdomain }}:{{ webmin_port }}/ $scheme://$http_host/;
        proxy_redirect / /;
        {% endif %}
        
        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}
